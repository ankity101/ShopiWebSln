@page
@model ShopiWebRazor_Temp.Pages.Categories.CreateModel


<form method="post">

    <div class="border p-3 mt-4 ">
        <div class="text-primary">
            Create Category
        </div>
        <div asp-validation-summary="All">
        </div>
        <hr />
        <div class="mb-3 row">
           
            <label asp-for="categories.Name"></label>
            <input asp-for="categories.Name" class="form-control" />
            <span asp-validation-for="categories.Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="categories.DisplayOrder"></label>
            <input asp-for="categories.DisplayOrder" class="form-control" />
            <span asp-validation-for="categories.DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">

            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control border"> Create </button>
            </div>

            <div class="col-6">
                <a asp-page="/categories/Index"   class="btn btn-secondary form-control border"> Back To List</a>
            </div>
        </div>

    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}